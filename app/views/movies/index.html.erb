<div class="container">
  <h1><span class="bi bi-film"></span> Movies</h1>
  <br>

  <%= link_to "New movie", new_movie_path, class:"btn btn-primary" %>
    

  <br><br>

    <nav class="navbar  bg-light">
      <a class="navbar-brand"></a>
      <form class="form-inline">
          <%= form_with url: movies_path, method: :get do |form|%>
              <%= form.text_field :query_text, placeholder: "Search", value: params[:query_text], class:"form-control mr-sm-2"%>
          <%end%>
      </form>
    </nav>
    <br>

  <div id="movies">
    <div class="row">
      <% @movies.each do |movie| %>
        <%= render movie %>
      <% end %>
    </div>
  </div>

  <%== pagy_bootstrap_nav(@pagy) %>
</div>
